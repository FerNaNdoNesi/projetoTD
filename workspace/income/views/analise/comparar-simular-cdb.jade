				min: 0,
				max: 100000000000,
				step: 50,
				verticalbuttons: true,
				verticalupclass: 'fa fa-plus',
				verticaldownclass: 'fa fa-minus'
			});
			$(".tempoInvestido2").TouchSpin({
				//- prefix: 'meses',
				buttondown_class: 'btn btn-white',
				buttonup_class: 'btn btn-white',
				decimals: 0,
				initval: 60,
				min: 0,
				max: 100000000000,
				step: 1,
				verticalbuttons: true,
				verticalupclass: 'fa fa-plus',
				verticaldownclass: 'fa fa-minus'
			});   
			$(".valorInvestido2").TouchSpin({
				prefix: 'R$',
				buttondown_class: 'btn btn-white',
				buttonup_class: 'btn btn-white',
				decimals: 2,
				initval: 5000,
				min: 0,
				max: 100000000000,
				step: 50,
				verticalbuttons: true,
				verticalupclass: 'fa fa-plus',
				verticaldownclass: 'fa fa-minus'
			});
			$(".percentualCDI2").TouchSpin({
				prefix: '%',
				buttondown_class: 'btn btn-white',
				buttonup_class: 'btn btn-white',
				decimals: 0,
				initval: 110,
				min: 0,
				max: 100000000000,
				step: 1,
				verticalbuttons: true,
				verticalupclass: 'fa fa-plus',
				verticaldownclass: 'fa fa-minus'
			});
		});